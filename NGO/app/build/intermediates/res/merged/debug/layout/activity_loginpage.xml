<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ngo.LoginPage"
    android:background="@drawable/bgg"
    >

    <ImageView
        android:contentDescription="@string/logo"
        android:id="@+id/globelogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/globelogo"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ngo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ngo"
        android:textSize="20sp"
        android:layout_below="@+id/globelogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slogan"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:id="@+id/textView"
        android:layout_below="@+id/ngo"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/userLogo"

        android:src="@drawable/username"
        android:layout_alignTop="@+id/UserName"
        android:layout_alignLeft="@+id/buttonLogin"
        android:layout_alignStart="@+id/buttonLogin" />
    <EditText
        android:id="@+id/UserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/usernameHint"
        android:maxLines="1"
        android:layout_marginLeft="15dp"
        android:paddingLeft="10dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:layout_above="@+id/PassWord"
        android:layout_toRightOf="@+id/userLogo"
        android:layout_toEndOf="@+id/userLogo" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/passLogo"
        android:src="@drawable/password"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/PassWord"
        android:layout_toLeftOf="@+id/UserName"
        android:layout_toStartOf="@+id/UserName" />
    <EditText
        android:id="@+id/PassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/passwordHint"
        android:ems="10"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:layout_marginLeft="15dp"
        android:layout_above="@+id/buttonLogin"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/passLogo"
        android:layout_toEndOf="@+id/passLogo"
        />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/loginButton"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:onClick="LoginToProfile"
        android:background="@drawable/login"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:typeface="serif"
        android:textColorLink="#000000"
         />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/loginRegister"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:onClick="RegisterProfile"
        android:background="@drawable/login"
        android:typeface="serif"
        android:clickable="true"
        android:textColorLink="#000000"
        android:layout_alignTop="@+id/buttonLogin"
        android:layout_alignRight="@+id/PassWord"
        android:layout_alignEnd="@+id/PassWord" />











</RelativeLayout>
