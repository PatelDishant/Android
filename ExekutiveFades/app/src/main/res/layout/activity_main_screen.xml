<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.dishant.exekutivefades.mainScreen"
    android:background="@drawable/bg_image">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/display"
        android:id="@+id/circleView"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_toRightOf="@+id/circleView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"/>



    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:layout_below="@+id/textViewName"
        android:layout_toRightOf="@+id/circleView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/circleView"
        android:layout_marginTop="30dp"
        android:id="@+id/scrollView">

    </HorizontalScrollView>

    <Button
        android:id="@+id/buttonCall"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Call the Shop"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/scrollView"/>

    <Button
        android:id="@+id/buttonTiming"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/scrollView"
        android:layout_toRightOf="@+id/buttonCall"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Shop Timings" />

</RelativeLayout>
